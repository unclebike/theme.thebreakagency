<div class="card tag-card">
    <a href="{{url}}" class="card-image-wrapper hover-image-animation" aria-label="{{name}}">
        {{#if feature_image}} 
            <figure>
                <img   
                    class="card-image-inner"                  
                    srcset="{{img_url feature_image size="s" format="webp"}} 300w,
                            {{img_url feature_image size="m" format="webp"}} 720w,
                            {{img_url feature_image size="l" format="webp"}} 960w"
                    src="{{img_url feature_image size="l"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{name}}{{/if}}"
                >              
            </figure>
        {{else}}
            <div class="placeholder flex-center">
                {{> "icons/placeholder-icon" }}
            </div>               
        {{/if}}
    </a>

    <div class="card-content">
        <div class="card-title-and-circle-wrapper">
            <div class="card-circle"></div>
            <div class="card-title-wrapper">
                <a href="{{url}}" class="medium-text card-text">
                    {{name}}
                </a>
            </div>
        </div>

        <div class="card-small-text">
            <p class="paragraph">
                {{plural count.posts empty=(t "No Posts") singular=(t "1 Post") plural=(t "% Posts")}}
            </p>
        </div>
    </div>
</div>