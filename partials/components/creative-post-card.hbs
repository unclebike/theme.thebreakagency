<div class="creative-post-card flex-center">
    <a href="{{url}}" class="creative-post-card-link">
        <div class="heading-1 creative-post-card-title dark">
            {{title}}
        </div>
    </a>

    <div class="creative-post-card-image-container">
        <a href="{{url}}" class="creative-post-card-image-wrapper flex-center" aria-label="{{title}}">
            {{#if feature_image}} 
                <figure>
                    <img   
                        class="card-image-inner"                  
                        srcset="{{img_url feature_image size="s" format="webp"}} 300w,
                                {{img_url feature_image size="m" format="webp"}} 720w,
                                {{img_url feature_image size="l" format="webp"}} 960w"
                        src="{{img_url feature_image size="l"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    >              
                </figure>
            {{else}}
                <!-- 
<div class="placeholder flex-center">
                    {{> "icons/placeholder-icon" }}
                </div>       
 -->        
            {{/if}}
            <div class="creative-post-card-overlay"></div>
        </a>
    </div>
</div>