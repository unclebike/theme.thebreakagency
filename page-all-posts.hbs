<link rel="stylesheet" type="text/css" href="{{asset "css/all-posts-page.css"}}" />

{{!< default}}

<main data-accent-navigation="false">
    <section class="all-posts-section">
        <all-posts class="all-posts-wrapper">
            <div class="all-posts-list">
                <div class="all-posts-circle"></div>
                {{#get "posts" include="authors" limit="all"}}
                    {{#foreach posts}}
                        <div class="all-posts-item{{#match @index 0}} active{{/match}}">
                            <div class="all-posts-item-heading{{#if @custom.use_page_load_animations}} ease-in-animation-no-stagger{{/if}}">
                                <a href="{{url}}" class="big-text all-posts-item-link">
                                    {{title}}
                                </a>
                            </div>

                            <div class="all-posts-item-excerpt">   
                                <div class="all-posts-excerpt-inner{{#match @index 0}}{{#if @custom.use_page_load_animations}} ease-in-animation{{/if}}{{/match}}">                    
                                    <p class="paragraph">
                                        {{excerpt}}
                                    </p>

                                    <div class="card-extra-info card-small-text">
                                        <p class="paragraph">
                                            <span>
                                                {{authors separator=" & " prefix="by "}},
                                            </span>
                                            <span>
                                                {{date published_at format="MMM DD, YYYY"}}
                                            </span>
                                        </p>
                                    </div>
                                </div>   
                            </div>

                            <div class="all-posts-background-image">
                                {{#if feature_image}} 
                                    <figure>
                                        <img             
                                            srcset="{{img_url feature_image size="s" format="webp"}} 320w,
                                                    {{img_url feature_image size="xm" format="webp"}} 440w,
                                                    {{img_url feature_image size="m" format="webp"}} 720w,
                                                    {{img_url feature_image size="l" format="webp"}} 960w,
                                                    {{img_url feature_image size="xl" format="webp"}} 1200w,
                                                    {{img_url feature_image size="xxl" format="webp"}} 2000w"
                                            src="{{img_url feature_image size="xxl"}}"
                                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                        >              
                                    </figure>
                                {{else}}
                                    <div class="placeholder flex-center">
                                        {{> "icons/placeholder-icon" }}
                                    </div> 
                                {{/if}}
                                <div class="dark-overlay"></div>
                            </div>
                        </div>
                    {{/foreach}}
                {{/get}}
            </div>
        </all-posts>
    </section>
</main>