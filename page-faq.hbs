<link rel="stylesheet" type="text/css" href="{{asset "css/secondary-hero.css"}}" />
<link rel="stylesheet" type="text/css" href="{{asset "css/toggle-card.css"}}" />

{{!< default}}

<main class="faq-page" data-accent-navigation="true">
    <section class="secondary-hero centered-secondary-hero">
        <div class="narrow-container">         
            <div class="secondary-hero-content">
                <div class="secondary-heading-wrapper">
                    <div class="tags-wrapper dark{{#if @custom.use_page_load_animations}} ease-in-animation{{/if}}">
                        <div class="bracket-subtitle">
                            <div class="medium-text left-bracket">{{t "["}}</div>
                            <div class="bracket-button-text">
                                <div class="medium-text main faq-number"> {{t "Questions"}}</div>
                            </div>
                            <div class="medium-text right-bracket">{{t "["}}</div>                    
                        </div>
                    </div>
                    {{#post}}
                        <h1 class="dark{{#if @custom.use_page_load_animations}} ease-in-animation{{/if}}">
                            {{title}}
                        </h1>
                    {{/post}}
                </div>

                <div class="secondary-paragraph-wrapper{{#if @custom.use_page_load_animations}} ease-in-animation{{/if}}">
                    <p class="paragraph">
                        {{#post}}
                            {{custom_excerpt}}
                        {{/post}}
                    </p>
                </div>
            </div>            
        </div>
    </section>
    <section class="last-section faq-section">
        <div class="narrow-container{{#if @custom.use_page_load_animations}} ease-in-animation{{/if}}">
            {{#post}}
                {{content}}
            {{/post}}
        </div>
    </section>
</main>

<script>
    document.querySelector('.faq-number').innerHTML = document.querySelectorAll('.faq-section .kg-toggle-card').length + document.querySelector('.faq-number').textContent;
</script>

{{#match @custom.footer_type "Creative"}}
    {{> "components/footer-creative"}}
{{else}}
    {{> "components/footer-normal"}}
{{/match}}
